{
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "OTEL_METRICS_EXPORTER": "otlp",
    "OTEL_LOGS_EXPORTER": "otlp",
    "OTEL_EXPORTER_OTLP_PROTOCOL": "grpc",
    "OTEL_EXPORTER_OTLP_ENDPOINT": "http://localhost:4317"
  },
  "includeCoAuthoredBy": false,
  "enabledPlugins": {
    "stepwise-dev@stepwise-dev": true
  },
  "alwaysThinkingEnabled": true,
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Skill(stepwise-dev:thoughts-management)",
      "Bash(test:*)",
      "Bash(tree:*)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"⚠️ Claude needs your approval to proceed\" with title \"Permission Required\" subtitle \"Claude Code\" sound name \"Funk\"'"
          }
        ]
      }
    ]
  }
}
